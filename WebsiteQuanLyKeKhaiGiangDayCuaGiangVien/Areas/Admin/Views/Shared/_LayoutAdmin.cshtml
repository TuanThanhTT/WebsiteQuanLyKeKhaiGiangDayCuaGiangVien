        // Lấy nút menu và sidebar
        const menuToggle = document.getElementById('menu-toggle');
        const sidebar = document.getElementById('sidebar');

        // Xử lý sự kiện khi nhấn nút menu-toggle
        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('active'); // Thêm hoặc gỡ bỏ lớp 'active'
        });

        // Sự kiện để hiển thị submenu khi nhấp vào danh mục
        document.querySelectorAll('.menu > li.has-submenu').forEach(menuItem => {
            menuItem.addEventListener('click', (event) => {
                // Đóng các submenu khác nếu cần (nếu muốn chỉ một mục mở cùng lúc)
                document.querySelectorAll('.menu > li.has-submenu').forEach(item => {
                    if (item !== menuItem) {
                        item.classList.remove('active'); // Đóng submenu khác
                    }
                });
                // Chỉ mở/đóng submenu cho mục li này
                menuItem.classList.toggle('active');
            });
        });

        // Ngừng sự kiện khi click vào submenu để không lan truyền lên li cha
        document.querySelectorAll('.sub-menu li').forEach(subMenuItem => {
            subMenuItem.addEventListener('click', (event) => {
                event.stopPropagation(); // Ngừng sự kiện lan truyền lên phần tử cha
            });
        });

    </script>
